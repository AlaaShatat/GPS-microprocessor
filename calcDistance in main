#include <stdio.h>
#include<math.h>


double
degreesToRadians (double degrees)
{
  double pi = 22 / 7;
  return degrees * pi / 180;
}


double
distanceInMeters (double lat1, double lon1, double lat2, double lon2)
{
  double earthRadius = 6371 * 10 * 10 * 10;

  double dLat = degreesToRadians (lat2 - lat1);
  double dLon = degreesToRadians (lon2 - lon1);

  lat1 = degreesToRadians (lat1);
  lat2 = degreesToRadians (lat2);

  double a = sin (dLat / 2) * sin (dLat / 2) +
    sin (dLon / 2) * sin (dLon / 2) * cos (lat1) * cos (lat2);
  double c = 2 * atan2 (sqrt (a), sqrt (1 - a));
  return earthRadius * c;
}

int
main ()
{

  double distance;
  double lat1 = 30.13274;
  double lon1 = 31.34395;
  double lat2 = 30.13278;
  double lon2 = 31.34377;
  distance = distanceInMeters (lat1, lon1, lat2, lon2);
  printf ("%f", distance);

  return 0;
}
